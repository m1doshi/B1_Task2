@{  //View для отображения основной страницы, на которой поле для выбора импортируемого файла, кнопка для импорта и кнопка для отображения загруженных файлов
    ViewData["Title"] = "Импорт данных из Excel";
}
<h2>Импорт данных из Excel</h2>

<form asp-controller="Import" asp-action="ImportExcel" method="post" enctype="multipart/form-data">
    <div>
        <label for="file">Выберите файл Excel:</label>
        <input type="file" id="file" name="file" accept=".xlsx" required />
    </div>
    <div>
        <button type="submit">Импортировать</button>
    </div>
</form>

@if (ViewData["Message"] != null)
{
    <div class="alert alert-info">
        @ViewData["Message"]
    </div>
}

<div>
    <a asp-controller="Import" asp-action="GetImportedFiles" class="btn btn-secondary">Отобразить список загруженных файлов</a>
</div>

